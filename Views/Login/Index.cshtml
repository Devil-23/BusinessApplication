@model BusinessApplication.ViewModels.LoginVM
@{
    Layout = null;


}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bussiness Plan | Log in </title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../Frontend/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../Frontend/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../Frontend/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                @*<a href="../../index2.html" class="h1"><b>Bussiness</b>Plan</a>*@
                @*<a class="h1"><b>Bussiness</b>Plan</a>*@
                <img src="~/Content/img/logo-large.png" style="max-width:100%;height:auto"/>
            </div>
            <div class="card-body text-center">
                <a class="h1"><b>Bussiness</b>Plan</a>
                <p class="login-box-msg">Sign in to start your session</p>

                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <p class="login-box-msg">@Html.ValidationSummary(true, null, new { @style = "color:red" })</p>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(p => p.User, new { @placeholder = "User", @class = "form-control", @Value = ViewBag.User })
                        @Html.ValidationMessageFor(p => p.User)
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.PasswordFor(p => p.Password, new { @placeholder = "Password", @class = "form-control", @Value = ViewBag.Password })
                        @Html.ValidationMessageFor(p => p.Password)
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                @Html.CheckBoxFor(p => p.RememberMe)
                                @Html.LabelFor(p => p.RememberMe)
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <input type="submit" value="Sign In" class="btn btn-primary btn-block">
                        </div>
                        <!-- /.col -->
                    </div>}




            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="../../Frontend/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../Frontend/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../Frontend/dist/js/adminlte.min.js"></script>
</body>
</html>
